<%= form_for [ @pin , @pin.comments.build] do |form| %>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_field :comment, id: :comment, class: "form-control textarea" %>
    <%= form.hidden_field :pin_id, value: @pin.id %>
  </div>
  
  <div class="actions">
    <%= form.submit "Comment", class: "btn btn-primary" %>
  </div>
  
<% end %>